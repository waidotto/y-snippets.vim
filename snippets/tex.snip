# =====preamble=====
snippet documentclass
alias head,\documentclass
abbr \documentclass,\begin
    \documentclass{jsarticle}
    \begin{document}
    ${1:TARGET}
    \end{document}

snippet title
alias \title
abbr \title,\author,\date
    \title{${1:#:title}}
    \author{${2:#:author}}
    \date{${3:\\today}}

# =====usepackage=====
snippet usepackage
alias \usepackage
abbr \usepackage
    \usepackage{${1:package}}
snippet amsmath
abbr \usepackage
    \usepackage{amsmath}
    \usepackage{amssymb}
snippet graphicx
abbr \usepackage
    \usepackage{graphicx}
snippet here
abbr \usepackage
    \usepackage{here}

# =====figure, table=====
snippet figure
abbr \figure
    \begin{figure}[${1:H}]
    \centering
    ${2:TARGET}
    \caption{${3:#:caption}}\label{${4:#:label}}
    \end{figure}
snippet includegraphics
alias \includegraphics
    \includegraphics[${1:#:options}]{${2:#:filename}}
snippet table
    \begin{table}[${1:H}]
    \centering
    \caption{${2:#:caption}}\label{${3:#:label}}
    \begin{tabular}{${4:#:columns}}${5:TARGET}
    \end{tabular}
    \end{table}

# =====environments=====
snippet begin
alias \begin
abbr \begin
    \begin{${1:#:environment}}
        ${2:TARGET}
    \end{$1}
snippet itemize
abbr \begin{itemize}
    \begin{itemize}
    \item ${0}
    \end{itemize}
snippet enumerate
abbr \begin{enumerate}
    \begin{enumerate}
    \item ${0}
    \end{enumerate}
snippet verbatim
abbr \begin{verbatim}
    \begin{verbatim}
    ${0:TARGET}
    \end{verbatim}

