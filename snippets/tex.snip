# =====listings=====
snippet listings
abbr \usepackage,\lstset
    \usepackage{listings}
    \usepackage[lighttt]{lmodern}
    \lstset{%
    	language={${1:#:language}},
    	basicstyle={\small\ttfamily},%
    	identifierstyle={\small},%
    	commentstyle={\small},%
    	keywordstyle={\small\bfseries},%
    	ndkeywordstyle={\small},%
    	stringstyle={\small},
    	frame={single},
    	breaklines=true,
    	columns=[l]{fullflexible},%
    	numbers=left,%
    	%xrightmargin=0zw,%
    	%xleftmargin=3zw,%
    	%numberstyle={\scriptsize},%
    	%stepnumber=1,
    	%numbersep=1zw,%
    	lineskip=-0.5ex,%
    	tabsize=4
    }
snippet lstinputlisting
alias \lstinputlisting
abbr \lstinputlisting
    \lstinputlisting[${1:#:caption =}]{${2:#:filename}}

